{
    "fpsLimit": 60,
    "autoPlay": true,
    "detectRetina": false,
    "pauseOnOutsideViewport": true,
    "particles": {
        "fullScreen": {
            "enable": false,
            "zIndex": -1
        },
        "number": {
            "value": 100,
            "limit": 100,
            "density": {
                "enable": true,
                "value_area": 500
            }
        },
        "color": {
            "value": "rgba(100,255,255,1)"
        },
        "shadow": {
            "enable": true,
            "blur": 10,
            "color": "rgb(255,255,255)",
            "offset": {
                "x": 0,
                "y": 0
            }
        },
        "shape": {
            "type": "circle"
        },
        "stroke": {
            "width": 0,
            "color": "rgb(0,0,0)"
        },
        "opacity": {
            "value": 0.5,
            "random": false,
            "anim": {
                "enable": false,
                "speed": 1,
                "opacity_min": 0.1,
                "sync": false
            }
        },
        "size": {
            "value": 10,
            "random": true,
            "anim": {
                "enable": true,
                "speed": 10,
                "size_min": 0.1,
                "sync": false
            }
        },
        "line_linked": {
            "enable": true,
            "distance": 200,
            "color": "#ffffff",
            "opacity": 0.4,
            "width": 2
        },
        "move": {
            "enable": true,
            "speed": 6,
            "direction": "none",
            "random": false,
            "straight": false,
            "out_mode": "out",
            "bounce": true,
            "attract": {
                "enable": false,
                "rotateX": 600,
                "rotateY": 1200
            }
        },
        "collisions": {
            "enable": false,
            "mode": "bounce",
            "overlap": {
                "enable": true,
                "retries": 0
            }
        },
        "roll": {
            "enable": false,
            "speed": 20,
            "backColor": "rgba(255,255,255,1)"
        },
        "life": {
            "duration": {
                "random": {
                    "enable": false,
                    "minimumValue": 1
                }
            }
        }
    },
    "interactivity": {
        "detect_on": "window",
        "events": {
            "onhover": {
                "enable": true,
                "mode": "bubble",
                "parallax": {
                    "enable": true,
                    "force": 50,
                    "smooth": 10
                }
            },
            "onclick": {
                "enable": true,
                "mode": "repulse"
            },
            "resize": true
        },
        "modes": {
            "attract": {
                "distance": 200,
                "duration": 0.2,
                "easing": "ease-out-quad",
                "factor": 2,
                "maxSpeed": 20,
                "speed": 1
            },
            "grab": {
                "distance": 200,
                "line_linked": {
                    "opacity": 1
                }
            },
            "bubble": {
                "distance": 200,
                "size": 20,
                "duration": 2,
                "opacity": 0.8,
                "speed": 3
            },
            "repulse": {
                "distance": 200,
                "duration": 5
            },
            "push": {
                "particles_nb": 1
            },
            "remove": {
                "particles_nb": 2
            }
        }
    },
    "motion": {
        "disable": false,
        "reduce": {
            "factor": 4,
            "value": true
        }
    }
}